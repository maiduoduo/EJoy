<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="ERefreshLoadMoreLayout">
        <attr name="erl_bg" format="color" />
        <attr name="erl_textcolor" format="color" />
        <attr name="erl_header_progress" format="reference" />
        <attr name="erl_arrow" format="reference" />
        <attr name="erl_header_progress_size" format="dimension" />
        <attr name="erl_header_arrow_width" format="dimension" />
        <attr name="erl_header_arrow_height" format="dimension" />
        <attr name="erl_header_title_size" format="dimension" />
        <attr name="erl_header_subtitle_size" format="dimension" />
        <attr name="erl_header_content_margin" format="dimension" />
        <attr name="erl_header_hint_normal" format="string" />
        <attr name="erl_header_hint_ready" format="string" />
        <attr name="erl_header_hint_loading" format="string" />
        <attr name="erl_header_last_time" format="string" />
        <attr name="erl_header_time_justnow" format="string" />
        <attr name="erl_header_time_minutes" format="string" />
        <attr name="erl_header_time_hours" format="string" />
        <attr name="erl_header_time_days" format="string" />
        <attr name="erl_header_height" format="dimension" />
        <attr name="erl_footer_content_margin" format="dimension" />
        <attr name="erl_footer_progress_size" format="dimension" />
        <attr name="erl_footer_title_size" format="dimension" />
        <attr name="erl_footer_progress" format="reference" />
        <attr name="erl_footer_hint_normal" format="string" />
        <attr name="erl_footer_hint_ready" format="string" />
        <attr name="erl_footer_hint_loading" format="string" />
        <attr name="erl_footer_no_more_data" format="string" />
        <attr name="erl_footer_height" format="dimension" />
    </declare-styleable>

    <declare-styleable name="ShadowBlurContainer">
        <attr name="sc_shadowColor" format="color"/>
    </declare-styleable>

    <declare-styleable name="BlurredView">
        <attr name="src" format="reference"/>
        <attr name="move" format="boolean"/>
        <attr name="disableBlurred" format="boolean"/>
    </declare-styleable>


    <!--自定义带有删除按钮的Edittext-->
    <declare-styleable name="IAutoDeleteEditText">
        <!--字体大小-->
        <attr name="adet_text_size" format="dimension" />
        <!--字体颜色-->
        <attr name="adet_text_color" format="color|reference" />
        <!--未输入文字是字体颜色-->
        <attr name="adet_hint_color" format="color|reference" />
        <!--是否内容居上-->
        <attr name="adet_isTop" format="boolean|reference" />
        <!--内容内边距离顶部的距离-->
        <attr name="adet_padding_top" format="dimension|reference" />
        <!--hint的资源-->
        <attr name="adet_hint" format="string|reference" />
        <!--是否单行-->
        <attr name="adet_isSingle" format="boolean|reference" />
        <!--输入类型-->
        <attr name="android:inputType" />
        <!--输入长度-->
        <attr name="adet_max_length" format="integer|reference" />
        <!--删除的图片的颜色-->
        <attr name="adet_tint_color" format="color" />
        <!--删除图片的资源-->
        <attr name="adet_delete_src" format="reference|color" />
    </declare-styleable>


    <declare-styleable name="IConsecutiveScrollerLayout_Layout">
        <attr name="layout_isConsecutive" format="boolean"/>
        <attr name="layout_isNestedScroll" format="boolean"/>
        <attr name="layout_isSticky" format="boolean"/>
        <attr name="layout_isTriggerScroll" format="boolean"/>
        <attr name="layout_isSink" format="boolean"/>
        <attr name="layout_align" format="enum">
            <enum name="LEFT" value="1" />
            <enum name="RIGHT" value="2" />
            <enum name="CENTER" value="3" />
        </attr>
    </declare-styleable>
    <declare-styleable name="IConsecutiveScrollerLayout">
        <attr name="isPermanent" format="boolean"/>
    </declare-styleable>


    <declare-styleable name="IPaletteImageView">
        <attr name="paletteRadius" format="dimension" />
        <attr name="paletteSrc" format="reference" />
        <attr name="palettePadding" format="dimension" />
        <attr name="paletteOffsetX" format="dimension" />
        <attr name="paletteOffsetY" format="dimension" />
        <attr name="paletteShadowRadius" format="dimension" />

    </declare-styleable>

    <declare-styleable name="IBannerView">
        <attr name="indicator_size" format="dimension"/>
        <attr name="indicator_space" format="dimension"/>
        <attr name="auto_time" format="integer"/>
    </declare-styleable>


</resources>