<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="ERefreshLoadMoreLayout">
        <attr name="erl_bg" format="color" />
        <attr name="erl_textcolor" format="color" />
        <attr name="erl_header_progress" format="reference" />
        <attr name="erl_arrow" format="reference" />
        <attr name="erl_header_progress_size" format="dimension" />
        <attr name="erl_header_arrow_width" format="dimension" />
        <attr name="erl_header_arrow_height" format="dimension" />
        <attr name="erl_header_title_size" format="dimension" />
        <attr name="erl_header_subtitle_size" format="dimension" />
        <attr name="erl_header_content_margin" format="dimension" />
        <attr name="erl_header_hint_normal" format="string" />
        <attr name="erl_header_hint_ready" format="string" />
        <attr name="erl_header_hint_loading" format="string" />
        <attr name="erl_header_last_time" format="string" />
        <attr name="erl_header_time_justnow" format="string" />
        <attr name="erl_header_time_minutes" format="string" />
        <attr name="erl_header_time_hours" format="string" />
        <attr name="erl_header_time_days" format="string" />
        <attr name="erl_header_height" format="dimension" />
        <attr name="erl_footer_content_margin" format="dimension" />
        <attr name="erl_footer_progress_size" format="dimension" />
        <attr name="erl_footer_title_size" format="dimension" />
        <attr name="erl_footer_progress" format="reference" />
        <attr name="erl_footer_hint_normal" format="string" />
        <attr name="erl_footer_hint_ready" format="string" />
        <attr name="erl_footer_hint_loading" format="string" />
        <attr name="erl_footer_no_more_data" format="string" />
        <attr name="erl_footer_height" format="dimension" />
    </declare-styleable>

    <declare-styleable name="ShadowBlurContainer">
        <attr name="sc_shadowColor" format="color"/>
    </declare-styleable>

    <declare-styleable name="BlurredView">
        <attr name="src" format="reference"/>
        <attr name="move" format="boolean"/>
        <attr name="disableBlurred" format="boolean"/>
    </declare-styleable>


    <!--自定义带有删除按钮的Edittext-->
    <declare-styleable name="IAutoDeleteEditText">
        <!--字体大小-->
        <attr name="adet_text_size" format="dimension" />
        <!--字体颜色-->
        <attr name="adet_text_color" format="color|reference" />
        <!--未输入文字是字体颜色-->
        <attr name="adet_hint_color" format="color|reference" />
        <!--是否内容居上-->
        <attr name="adet_isTop" format="boolean|reference" />
        <!--内容内边距离顶部的距离-->
        <attr name="adet_padding_top" format="dimension|reference" />
        <!--hint的资源-->
        <attr name="adet_hint" format="string|reference" />
        <!--是否单行-->
        <attr name="adet_isSingle" format="boolean|reference" />
        <!--输入类型-->
        <attr name="android:inputType" />
        <!--输入长度-->
        <attr name="adet_max_length" format="integer|reference" />
        <!--删除的图片的颜色-->
        <attr name="adet_tint_color" format="color" />
        <!--删除图片的资源-->
        <attr name="adet_delete_src" format="reference|color" />
    </declare-styleable>


    <declare-styleable name="IConsecutiveScrollerLayout_Layout">
        <attr name="layout_isConsecutive" format="boolean"/>
        <attr name="layout_isNestedScroll" format="boolean"/>
        <attr name="layout_isSticky" format="boolean"/>
        <attr name="layout_isTriggerScroll" format="boolean"/>
        <attr name="layout_isSink" format="boolean"/>
        <attr name="layout_align" format="enum">
            <enum name="LEFT" value="1" />
            <enum name="RIGHT" value="2" />
            <enum name="CENTER" value="3" />
        </attr>
    </declare-styleable>
    <declare-styleable name="IConsecutiveScrollerLayout">
        <attr name="isPermanent" format="boolean"/>
    </declare-styleable>


    <declare-styleable name="IPaletteImageView">
        <attr name="paletteRadius" format="dimension" />
        <attr name="paletteSrc" format="reference" />
        <attr name="palettePadding" format="dimension" />
        <attr name="paletteOffsetX" format="dimension" />
        <attr name="paletteOffsetY" format="dimension" />
        <attr name="paletteShadowRadius" format="dimension" />

    </declare-styleable>

    <declare-styleable name="IBannerView">
        <attr name="indicator_size" format="dimension"/>
        <attr name="indicator_space" format="dimension"/>
        <attr name="auto_time" format="integer"/>
    </declare-styleable>

    <!--圆角或者圆形图片组件-->
    <declare-styleable name="DouyinCircleImageView">
        <attr name="ease_border_color" format="color" />
        <attr name="ease_border_width" format="dimension" />
        <attr name="ease_press_alpha" format="integer" />
        <attr name="ease_press_color" format="color" />
        <attr name="ease_radius" format="dimension" />
        <attr name="es_shape_type" format="enum">
            <enum name="none" value="0" />
            <enum name="round" value="1" />
            <enum name="rectangle" value="2" />
        </attr>
    </declare-styleable>

    <declare-styleable name="AutoLinkTextView">
        <!-- 链接高亮颜色 -->
        <attr name="highlight_textcolor" format="color" />
        <!-- 默认文字颜色 -->
        <attr name="default_textcolor" format="color" />
    </declare-styleable>


    <!--温度计-->
    <declare-styleable name="IThermometerView">
        <attr name="viewBg" format="color|reference" /> <!-- 背景颜色 -->
        <attr name="unitTextSize" format="dimension" /> <!-- 单位文字大小 -->
        <attr name="unitTextColor" format="color|reference" /> <!-- 单位文字颜色 -->
        <attr name="scaleTextSize" format="dimension" /> <!-- 刻度值文字大小 -->
        <attr name="scaleTextColor" format="color|reference" /> <!-- 刻度值文字颜色 -->
        <attr name="maxScaleLineColor" format="color|reference" /> <!-- 长刻度颜色 -->
        <attr name="midScaleLineColor" format="color|reference" /> <!-- 中等刻度颜色 -->
        <attr name="minScaleLineColor" format="color|reference" /> <!-- 短刻度颜色 -->
        <attr name="scaleLineWidth" format="float" /> <!-- 刻度线宽 -->
        <attr name="maxLineWidth" format="float" /> <!-- 长刻度长 -->
        <attr name="midLineWidth" format="float" /> <!-- 中等刻度长 -->
        <attr name="minLineWidth" format="float" /> <!-- 短刻度长 -->
        <attr name="spaceScaleWidth" format="float" /> <!-- 刻度离温度计距离、刻度离文字距离 -->
        <attr name="thermometerBg" format="color|reference" /> <!-- 温度计颜色 -->
        <attr name="thermometerShadowBg" format="color|reference" /> <!-- 温度计阴影颜色 -->
        <attr name="maxThermometerRadius" format="float" /> <!-- 温度计底部半径 -->
        <attr name="minThermometerRadius" format="float" /> <!-- 温度计顶部半径 -->
        <attr name="maxMercuryRadius" format="float" /> <!-- 水银底部半径 -->
        <attr name="minMercuryRadius" format="float" /> <!-- 水银顶部半径 -->
        <attr name="leftMercuryBg" format="color|reference" /> <!-- 左边水银背景颜色 -->
        <attr name="rightMercuryBg" format="color|reference" /> <!-- 右边水银背景颜色 -->
        <attr name="leftMercuryColor" format="color|reference" /> <!-- 左边水银颜色 -->
        <attr name="rightMercuryColor" format="color|reference" /> <!-- 右边水银颜色 -->
        <attr name="maxScaleValue" format="float" /> <!-- 温度计最大值 -->
        <attr name="minScaleValue" format="float" /> <!-- 温度计最小值 -->
        <attr name="curScaleValue" format="float" /> <!-- 当前刻度值 -->
    </declare-styleable>


    <!--自定义键盘-->
    <declare-styleable name="KingKeyboardView">

        <attr name="android:labelTextSize"/>
        <attr name="android:keyTextSize"/>
        <attr name="android:keyTextColor"/>
        <attr name="android:keyBackground"/>
        <attr name="kkbDeleteDrawable" format="reference"/>
        <attr name="kkbCapitalDrawable" format="reference"/>
        <attr name="kkbCapitalLockDrawable" format="reference"/>
        <attr name="kkbCancelDrawable" format="reference"/>
        <attr name="kkbSpaceDrawable" format="reference"/>
        <attr name="kkbSpecialKeyBackground" format="reference"/>
        <attr name="kkbDoneKeyBackground" format="reference"/>
        <attr name="kkbNoneKeyBackground" format="reference"/>
        <attr name="kkbKeyIconColor" format="color"/>
        <attr name="kkbKeySpecialTextColor" format="color"/>
        <attr name="kkbKeyDoneTextColor" format="color"/>
        <attr name="kkbKeyDoneTextSize" format="dimension"/>
        <attr name="kkbKeyNoneTextColor" format="color"/>
        <attr name="kkbKeyDoneText" format="string"/>

    </declare-styleable>
    <declare-styleable name="King_KeyboardView">

        <attr name="android:keyBackground"/>

        <attr name="android:keyTextSize"/>

        <attr name="android:labelTextSize" />

        <attr name="android:keyTextColor"/>

        <attr name="android:keyPreviewLayout" />

        <attr name="android:keyPreviewOffset" />

        <attr name="android:keyPreviewHeight" />

        <attr name="android:verticalCorrection" />

        <attr name="android:popupLayout" />

        <attr name="android:shadowColor" />

        <attr name="android:shadowRadius" />
    </declare-styleable>
    <declare-styleable name="King_KeyboardViewPreviewState">

        <attr name="android:state_long_pressable"/>
    </declare-styleable>
    <declare-styleable name="King_Keyboard">

        <attr name="android:keyWidth" />

        <attr name="android:keyHeight"  />

        <attr name="android:horizontalGap" />

        <attr name="android:verticalGap"/>
    </declare-styleable>
    <declare-styleable name="King_Keyboard_Row">

        <attr name="android:rowEdgeFlags"/>

        <attr name="android:keyboardMode"/>
    </declare-styleable>
    <declare-styleable name="King_Keyboard_Key">

        <attr name="android:codes"/>

        <attr name="android:popupKeyboard"/>

        <attr name="android:popupCharacters" />

        <attr name="android:keyEdgeFlags"/>

        <attr name="android:isModifier" />

        <attr name="android:isSticky" />

        <attr name="android:isRepeatable" />

        <attr name="android:iconPreview"/>

        <attr name="android:keyOutputText" />

        <attr name="android:keyLabel" />

        <attr name="android:keyIcon"/>

        <attr name="android:keyboardMode" />
    </declare-styleable>


    <!--自定义安全键盘-->
    <declare-styleable name="SafeKeyboardView">
        <attr name="random_digit" format="boolean" />                   <!-- 数字随机显示 -->
        <attr name="remember_last_type" format="boolean" />             <!-- 记住上次键盘输入类型 -->
        <attr name="enable_vibrate" format="boolean" />                 <!-- 开启震动 -->
    </declare-styleable>


</resources>