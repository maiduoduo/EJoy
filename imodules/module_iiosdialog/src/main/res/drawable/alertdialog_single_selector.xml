<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/act_sel_bg"/>
            <corners
                android:bottomLeftRadius="@dimen/shape_radius"
                android:bottomRightRadius="@dimen/shape_radius"
                android:radius="0dp"/>
        </shape>
    </item>

    <item android:state_pressed="false">
        <shape>
            <solid android:color="@color/act_def_bg"/>
            <corners
                android:bottomLeftRadius="@dimen/shape_radius"
                android:bottomRightRadius="@dimen/shape_radius"
                android:radius="0dp"/>
        </shape>
    </item>
</selector>