<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <FrameLayout
        android:id="@+id/box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/img_popup_bg"
        android:layout_marginTop="-15dp"
        android:orientation="vertical" />

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/arrow_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|left"
        android:layout_marginTop="@dimen/ejoy_popup_arrow_up_margin_top"
        app:srcCompat="@drawable/ejoy_popup_arrow_up" />

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/arrow_down"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|left"
        android:layout_marginBottom="@dimen/ejoy_popup_arrow_down_margin_bottom"
        app:srcCompat="@drawable/ejoy_popup_arrow_down" />

</FrameLayout>