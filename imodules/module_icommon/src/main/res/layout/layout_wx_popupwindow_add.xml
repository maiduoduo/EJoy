<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/transparent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:background="@drawable/bg_popup_white"
        android:paddingLeft="@dimen/dp_20"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:paddingTop="20dp">
        <RelativeLayout
            android:id="@+id/rlChatGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10">
            <TextView
                android:id="@+id/tvChatGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="left"
                android:drawablePadding="@dimen/dp_15"
                android:layout_gravity="center_vertical"
                android:drawableLeft="@mipmap/ichat_send_chatgroup"
                android:textStyle="bold"
                android:textSize="15sp"
                android:textColor="@color/gray_616161"
                android:text="发起群聊"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/dp_40"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_below="@+id/tvChatGroup"
                android:background="@color/LGray1"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rlAddFriends"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10">
            <TextView
                android:id="@+id/tvAddFrineds"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="left"
                android:drawablePadding="15dp"
                android:layout_gravity="center_vertical"
                android:drawableLeft="@mipmap/ichat_add_friend"
                android:textStyle="bold"
                android:textSize="15sp"
                android:textColor="@color/gray_616161"
                android:text="添加好友"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/dp_40"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_below="@+id/tvAddFrineds"
                android:background="@color/LGray1"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rlPopScan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">
            <TextView
                android:id="@+id/tvPopScan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="left"
                android:drawablePadding="15dp"
                android:layout_gravity="center_vertical"
                android:drawableLeft="@mipmap/ichat_scan"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/gray_616161"
                android:text="扫一扫"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/dp_40"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_below="@+id/tvPopScan"
                android:background="@color/LGray1"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rlFeedBack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">
            <TextView
                android:id="@+id/tvFeedBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="left"
                android:drawablePadding="8dp"
                android:layout_gravity="center_vertical"
                android:drawableLeft="@mipmap/ichat_feedback"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/gray_616161"
                android:text="我有意见"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_below="@+id/tvFeedBack"
                android:background="@color/LGray1"/>
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>