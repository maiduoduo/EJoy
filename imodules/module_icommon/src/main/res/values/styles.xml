<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="ICustomBSAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/statusBarColor</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <!--去除下部的阴影线-->
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="CustomBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
           
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
    </style>

    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
           
        <item name="android:background">@android:color/transparent</item>
    </style>


    <!--item-->
    <style name="ITextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ITextStyle.Title">
        <item name="android:textSize">@dimen/ejoy_config_size_title_text</item>
        <item name="android:textColor">@color/ejoy_config_color_title_text</item>
    </style>

    <style name="ITextStyle.Title.wrap">
        <item name="android:layout_marginBottom">@dimen/ejoy_content_spacing_horizontal</item>
    </style>

    <style name="ITextStyle.Explain">
        <item name="android:textSize">@dimen/ejoy_config_size_explain_text</item>
        <item name="android:textColor">@color/ejoy_config_color_explain_text</item>
    </style>

    <!--LinearLayout-->
    <style name="ILinearLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:minHeight">?attr/listPreferredItemHeight</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingStart">@dimen/ejoy_content_spacing_horizontal</item>
        <item name="android:paddingEnd">@dimen/ejoy_content_spacing_horizontal</item>
    </style>

    <!--BottomSheet背景-->
    <style name="BottomSheetDialogStyle" parent="Theme.Design.BottomSheetDialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:background">@android:color/transparent</item>
        <!--设置背景不透明-->
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.4</item>  <!--背景透明度-->
    </style>


    <!--*********************************************
    *                 PopupWindow Style             *
    **********************************************-->
    <style name="EUI.Animation" parent="@android:style/Animation" />

    <style name="EUI.Animation.PopUpMenu" />

    <style name="EUI.Animation.PopUpMenu.Center">
        <item name="android:windowEnterAnimation">@anim/pop_grow_from_bottom</item>
        <item name="android:windowExitAnimation">@anim/pop_shrink_from_top</item>
    </style>

    <style name="EUI.Animation.PopUpMenu.Left">
        <item name="android:windowEnterAnimation">@anim/pop_grow_from_bottomleft_to_topright</item>
        <item name="android:windowExitAnimation">@anim/pop_shrink_from_topright_to_bottomleft</item>
    </style>

    <style name="EUI.Animation.PopUpMenu.Right">
        <item name="android:windowEnterAnimation">@anim/pop_grow_from_bottomright_to_topleft</item>
        <item name="android:windowExitAnimation">@anim/pop_shrink_from_topleft_to_bottomright</item>
    </style>

    <style name="EUI.Animation.PopDownMenu" />

    <style name="EUI.Animation.PopDownMenu.Center">
        <item name="android:windowEnterAnimation">@anim/pop_grow_from_top</item>
        <item name="android:windowExitAnimation">@anim/pop_shrink_from_bottom</item>
    </style>

    <style name="EUI.Animation.PopDownMenu.Left">
        <item name="android:windowEnterAnimation">@anim/pop_grow_from_topleft_to_bottomright</item>
        <item name="android:windowExitAnimation">@anim/pop_shrink_from_bottomright_to_topleft</item>
    </style>

    <style name="EUI.Animation.PopDownMenu.Right">
        <item name="android:windowEnterAnimation">@anim/pop_grow_from_topright_to_bottomleft</item>
        <item name="android:windowExitAnimation">@anim/pop_shrink_from_bottomleft_to_topright</item>
    </style>

    <style name="QQPopAnim">
        <item name="android:windowEnterAnimation">@anim/anim_qq_pop_show</item>
        <item name="android:windowExitAnimation">@anim/anim_qq_pop_hide</item>
    </style>

    <style name="PopMenuAnim">
        <item name="android:windowEnterAnimation">@anim/anim_pop_tanslate_in</item>
        <item name="android:windowExitAnimation">@anim/anim_pop_tanslate_out</item>
    </style>

    <style name="ListPopAnim">
        <item name="android:windowEnterAnimation">@anim/anim_fade_in</item>
        <item name="android:windowExitAnimation">@anim/anim_fade_out</item>
    </style>

    <!--发布菜单弹出样式-->
    <!--<style name="main_publishdialog_style" parent="android:Theme.Holo.Light.Dialog">-->
    <style name="IPublishdialog_style" parent="@style/Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <style name="CustomPopWindowStyle">
        <item name="android:windowEnterAnimation">@anim/popwindow_anim_in</item>
        <item name="android:windowExitAnimation">@anim/popwindow_anim_out</item>
    </style>

    <!--PopupWindow从底部弹出-->
    <style name="PopupWindowTranslateThemeFromBottom">
        <item name="android:windowEnterAnimation">@anim/anim_popup_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/anim_popup_bottom_out</item>
    </style>

    <style name="PopupWindowScaleTheme">
        <item name="android:windowEnterAnimation">@anim/anim_popup_scale_in</item>
        <item name="android:windowExitAnimation">@anim/anim_popup_scale_out</item>
    </style>

    <!-- 提示point -->
    <style name="EUITipPoint">
        <item name="android:layout_width">@dimen/tips_point_size</item>
        <item name="android:layout_height">@dimen/tips_point_size</item>
        <item name="android:background">@drawable/shape_tips_point</item>
    </style>


    <style name="menu_wxpop_add">
        <item name="android:windowEnterAnimation">@anim/wxpop_add_show</item>
        <item name="android:windowExitAnimation">@anim/wxpop_add_hide</item>
    </style>

    <style name="edit_main_bg">
        <!-- <item name="android:background">@drawable/shape_spinner_frame_bg</item>-->
        <item name="android:textColor">#01CBD6</item>
        <item name="android:textSize">15dp</item>
    </style>


    <declare-styleable name="IWaveSideBarView">
        <attr name="sidebarTextColor" format="color|reference" />
        <attr name="sidebarBackgroundColor" format="color|reference" />
        <attr name="sidebarChooseTextColor" format="color|reference" />
        <attr name="sidebarTextSize" format="dimension" />
        <attr name="sidebarWaveTextSize" format="dimension" />
        <attr name="sidebarRadius" format="dimension" />
        <attr name="sidebarBallRadius" format="dimension" />
    </declare-styleable>


    <!--多样式简单Dialog-->
    <style name="BaseDialogStyle">
        <!--设置dialog的背景-->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--Dialog的windowFrame框为无-->
        <item name="android:windowFrame">@null</item>
        <!--是否显示title-->
        <item name="android:windowNoTitle">true</item>
        <!--是否浮现在activity之上-->
        <item name="android:windowIsFloating">true</item>
        <!--是否半透明-->
        <item name="android:windowIsTranslucent">true</item>
        <!--是否有遮盖-->
        <item name="android:windowContentOverlay">@null</item>
        <!--背景是否模糊显示-->
        <item name="android:backgroundDimEnabled">true</item>
        <!--点击非dialog关闭-->
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>

    <style name="AlertViewDialogStyle" parent="BaseDialogStyle">
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
    </style>


    <!--抖音评论-dialog-->
    <style name="DouyinCommentDialog" parent="AlertDialog.AppCompat">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowAnimationStyle">@style/dialog_animation</item>
        <item name="android:statusBarColor">@color/transparent</item>
    </style>

    <style name="dialog_animation" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/anim_dialog_enter</item>
        <item name="android:windowExitAnimation">@anim/anim_dialog_exit</item>
    </style>

    <!--安全键盘-dialog-->
    <style name="IDialogFragment.FullScreen" parent="Theme.AppCompat.Dialog">
        <item name="android:padding">0dp</item>
        <item name="android:windowBackground">@color/deepDarkTransparent</item>
    </style>


    <style name="TextAppearance_SweetToast">
    </style>
    <style name="Anim_SweetToast">
        <item name="android:windowEnterAnimation">@anim/anim_sweet_toast_enter_miui</item>
        <item name="android:windowExitAnimation">@anim/anim_sweet_toast_exit</item>
    </style>




</resources>