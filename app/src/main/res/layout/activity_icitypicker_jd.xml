<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.activity.picker.ICitypickerJDActivity">
    <RelativeLayout
        android:id="@+id/headview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/dp_10"
        android:background="@color/app_color_theme_7">
        <ImageView
            android:layout_width="@dimen/dp_25"
            android:layout_height="@dimen/dp_25"
            android:layout_centerVertical="true"
            android:onClick="ivback"
            android:src="@mipmap/pick_ico_back_white_90px"/>
        <TextView
            android:id="@+id/cityname_tv"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="仿京东城市选择器"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <com.ejoy.tool.scaffold.view.MailLineView
            android:layout_width="match_parent"
            android:layout_height="4dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="14dp"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="收货人：麦多多"
                    android:textSize="16sp"
                    android:textColor="#000000"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="1234598765"
                    android:textSize="16sp"
                    android:textColor="#000000"/>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ico_locate"/>
                <TextView
                    android:id="@+id/tvAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:layout_gravity="center_vertical"
                    android:text="收货地址：四川省成都市高新区天府软件园D区"/>
            </LinearLayout>
            <TextView
                android:id="@+id/result_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text=""
                android:layout_marginLeft="@dimen/dp_25"
                android:textSize="10sp"
                android:maxLines="2"
                android:ellipsize="end"
                android:textColor="@color/Gray3"/>
        </LinearLayout>
        <com.ejoy.tool.scaffold.view.MailLineView
            android:layout_width="match_parent"
            android:layout_height="4dp"/>
    </LinearLayout>

    <!--显示一级、二级三级-->
    <LinearLayout
        style="@style/linearlayout_style"
        android:layout_marginVertical="@dimen/dp_20">
        <TextView
            style="@style/linearlayout_text_style"
            android:layout_weight="1.3"
            android:text="显示几级联动" />

        <TextView
            android:id="@+id/two_tv"
            style="@style/linearlayout_text_style1"
            android:layout_weight="1"
            android:background="@drawable/shape_city_jd_left_selected"
            android:gravity="center"
            android:textColor="@color/white"
            android:text="省市两级" />

        <TextView
            android:id="@+id/three_tv"
            style="@style/linearlayout_text_style1"
            android:layout_weight="1"
            android:background="@drawable/shape_city_jd_right_normal"
            android:gravity="center"
            android:text="省市区三级" />
    </LinearLayout>

    <Button
        android:id="@+id/jd_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_35"
        android:layout_marginHorizontal="50dp"
        android:layout_marginVertical="@dimen/dp_40"
        android:background="@drawable/bg_jd_picker"
        android:text="仿京东城市选择器"
        android:textColor="@color/white" />
</LinearLayout>