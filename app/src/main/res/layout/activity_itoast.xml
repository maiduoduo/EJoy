<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:background="@color/transparent"
    android:orientation="vertical">

    <!--android:background="@drawable/img_bg_top"-->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="120dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/img_bg_statusbar" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingHorizontal="@dimen/dp_10"
            android:paddingBottom="@dimen/dp_15"
            android:text="仿IOS弹窗Toast\n只作提示性，\n不能作为网络请求的长时显示"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textStyle="bold" />
    </FrameLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp_10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_20"
                android:background="@color/LGray3"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dp_10"
                android:text="自定义布局TOAST"
                android:textColor="@color/Gray3A"
                android:textSize="10sp"
                android:textStyle="bold" />
            <!--自定义布局TOAST1-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/dp_10"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnToastCustomDefault"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_marginHorizontal="@dimen/dp_5"
                    android:layout_weight="1"
                    android:background="@drawable/shape_button_blue"
                    android:gravity="center"
                    android:text="默认效果"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btnToastSuccess"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_marginHorizontal="@dimen/dp_5"
                    android:layout_weight="1"
                    android:background="@drawable/shape_button_blue"
                    android:gravity="center"
                    android:text="成功效果"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btnToastFail"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_marginHorizontal="@dimen/dp_5"
                    android:layout_weight="1"
                    android:background="@drawable/shape_btn_deepblue"
                    android:gravity="center"
                    android:text="失败效果"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:textStyle="bold" />

            </LinearLayout>
            <!--自定义布局TOAST2-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/dp_10"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnToastTip"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_marginHorizontal="@dimen/dp_20"
                    android:layout_weight="1"
                    android:background="@drawable/shape_button"
                    android:gravity="center"
                    android:text="提示效果"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btnToastError"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_marginHorizontal="@dimen/dp_20"
                    android:layout_weight="1"
                    android:background="@drawable/shape_button_4"
                    android:gravity="center"
                    android:text="错误效果"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:textStyle="bold" />
            </LinearLayout>
            <!--自定义布局TOAST3-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/dp_10"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnToastDefault"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_marginHorizontal="@dimen/dp_20"
                    android:layout_weight="1"
                    android:background="@drawable/shape_button_3"
                    android:gravity="center"
                    android:text="默认效果"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btnSelectIcon"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_marginHorizontal="@dimen/dp_20"
                    android:layout_weight="1"
                    android:background="@drawable/shape_button_blue"
                    android:gravity="center"
                    android:text="指定自己的资源图标"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!--普通TOAST-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_20"
                android:background="@color/LGray3"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dp_10"
                android:text="普通TOAST"
                android:textColor="@color/Gray3A"
                android:textSize="10sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/dp_10">

                <TextView
                    android:id="@+id/tvNoRepeat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="@dimen/dp_5"
                    android:text="系统吐司"
                    android:textColor="@color/Gray3A"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tvSimpleTextIco"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_15"
                    android:paddingVertical="@dimen/dp_5"
                    android:text="简洁文本图标类型提示(顶部)"
                    android:textColor="@color/Gray3A"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tvSimpleIco"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_15"
                    android:paddingVertical="@dimen/dp_5"
                    android:text="简洁图标类型提示(中间)"
                    android:textColor="@color/Gray3A"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tvSimpleText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_15"
                    android:paddingVertical="@dimen/dp_5"
                    android:text="简洁文字类型提示长时(底部)"
                    android:textColor="@color/Gray3A"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tvSimpleTargetIco"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_15"
                    android:paddingVertical="@dimen/dp_5"
                    android:text="指定图标类型提示"
                    android:textColor="@color/Gray3A"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tvSimpleTargetAll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_15"
                    android:paddingVertical="@dimen/dp_5"
                    android:text="全部指定类型提示"
                    android:textColor="@color/Gray3A"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tvSimpleDefault"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_15"
                    android:paddingVertical="@dimen/dp_5"
                    android:text="简洁默认类型提示"
                    android:textColor="@color/Gray3A"
                    android:textSize="15sp" />
            </LinearLayout>


            <!--仿微信支付宝等悬浮提示-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_20"
                    android:background="@color/LGray3"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/dp_10"
                    android:text="仿微信支付宝等悬浮提示"
                    android:textColor="@color/Gray3A"
                    android:textSize="10sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvFloat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:paddingVertical="@dimen/dp_5"
                    android:text="悬浮通知效果"
                    android:paddingLeft="@dimen/dp_10"
                    android:textColor="@color/Gray3A"
                    android:textSize="15sp" />
            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="150dp" />
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>


</LinearLayout>