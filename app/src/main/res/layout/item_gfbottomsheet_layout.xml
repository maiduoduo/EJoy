<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:paddingHorizontal="@dimen/dp_3"
    android:paddingVertical="@dimen/dp_10">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">
        <ImageView
            android:visibility="visible"
            android:id="@+id/item_icon"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:contentDescription="Item Icon"
            android:src="@mipmap/icon_grid_collapse_top_bar" />

        <TextView
            android:id="@+id/item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingVertical="@dimen/dp_2"
            android:paddingHorizontal="@dimen/dp_2"
            android:text="工具类"
            android:textStyle="bold"
            android:textColor="@color/black_33"
            android:textSize="13sp"/>
    </LinearLayout>
    <TextView
        android:visibility="gone"
        android:id="@+id/item_des"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="marquee"
        android:maxLines="2"
        android:focusable="true"
        android:paddingVertical="@dimen/dp_2"
        android:paddingHorizontal="@dimen/dp_2"
        android:text="工具类:集中处理发士大夫吉林省地方就"
        android:textColor="@color/Gray3"
        android:textSize="11sp"/>
</LinearLayout>