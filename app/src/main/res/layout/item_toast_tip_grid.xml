<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@drawable/shape_toast_tip_grid_bg"
    android:layout_marginHorizontal="@dimen/dp_7"
    android:layout_marginBottom="@dimen/dp_10"
    android:layout_height="@dimen/dp_50">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">
        <TextView
            android:id="@+id/item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:maxLength="12"
            android:text=""
            android:layout_gravity="center_horizontal"
            android:textColor="@color/color_grid_item_name"
            android:textSize="12sp"/>
        <TextView
            android:id="@+id/item_EN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_2"
            android:ellipsize="end"
            android:paddingHorizontal="@dimen/dp_10"
            android:layout_gravity="center_horizontal"
            android:maxLines="1"
            android:text=""
            android:textColor="@color/color_grid_item_en"
            android:textSize="11sp"/>
    </LinearLayout>



    <TextView
        android:id="@+id/item_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/dp_5"
        android:paddingVertical="@dimen/dp_2"
        android:text=""
        android:background="@drawable/shape_toast_grid_item_label_bg"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:textColor="@color/color_grid_item_label"
        android:textSize="7sp"/>





</RelativeLayout>