<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/headview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/dp_10"
        android:background="@color/app_color_theme_5">
        <ImageView
            android:layout_width="@dimen/dp_25"
            android:layout_height="@dimen/dp_25"
            android:layout_centerVertical="true"
            android:onClick="ivback"
            android:src="@drawable/ico_back_white_90px"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="城市三级列表选择"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/headview"
        android:paddingVertical="@dimen/dp_20"
        android:orientation="vertical">

        <TextView
            android:id="@+id/list_tv"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_centerInParent="true"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="@dimen/dp_50"
            android:background="@drawable/shape_button_13"
            android:gravity="center"
            android:text="获取三级城市列表"
            android:textColor="@color/white"
            android:textSize="16sp" />
        <TextView
            android:id="@+id/result_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/black_77"
            android:textColor="@color/white"
            android:minLines="10"
            android:ellipsize="end"
            android:maxLines="10"
            android:paddingVertical="15dp"
            android:paddingHorizontal="@dimen/dp_10"
            android:text="结果："/>


    </LinearLayout>
</RelativeLayout>
