<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/White"
    tools:context=".ui.activity.refresh.IRefreshSmartActivity">
    <FrameLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:paddingHorizontal="@dimen/dp_10"
        android:background="@color/union_bg">
        <ImageView
            android:layout_width="@dimen/dp_25"
            android:layout_height="@dimen/dp_25"
            android:layout_gravity="center_vertical"
            android:onClick="iBack"
            android:gravity="center"
            android:src="@drawable/ico_back_white_90px"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:text="下拉刷新/上拉加载更多"
            tools:ignore="HardcodedText" />
        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/ivShowTip"
            android:layout_width="@dimen/dp_25"
            android:layout_height="@dimen/dp_25"
            android:layout_gravity="right|center_vertical"
            app:srcCompat="@mipmap/ico_gt_138px_white"/>
    </FrameLayout>
    <com.module.iviews.refresh.RefreshLoadMoreLayout
        android:id="@+id/mRefreshLoadMoreLayout"
        android:layout_width="match_parent"
        app:erl_header_hint_normal="下拉试试看"
        app:erl_header_hint_ready="已经准备好了"
        android:layout_height="match_parent"
        app:erl_header_progress="@drawable/anim_header_footer_progress"
        app:erl_header_progress_size="25dp"
        app:erl_header_arrow_width="30dp"
        app:erl_header_arrow_height="30dp"
        app:erl_arrow="@drawable/anim_header_footer_progress">
        <!--指定LayoutAnimation-->
        <android.support.v7.widget.RecyclerView
            android:id="@+id/mRecyclerView"
            android:scrollbars="none"
            android:layoutAnimation="@anim/animation_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:overScrollMode="never">
        </android.support.v7.widget.RecyclerView>
    </com.module.iviews.refresh.RefreshLoadMoreLayout>
</LinearLayout>
