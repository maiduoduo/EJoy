<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_gray_eaeaea">
    <LinearLayout
        android:id="@+id/scrollView_refresh_head"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
    </LinearLayout>
    <com.ejoy.tool.floattab.View.SuspendScrollView
        android:id="@+id/home_scrollview"
        android:overScrollMode="never"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/scrollview_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:descendantFocusability="blocksDescendants"
            android:orientation="vertical">

            <LinearLayout
                android:descendantFocusability="blocksDescendants"
                android:id="@+id/home_banner_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/myimage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="fitXY"
                    android:src="@mipmap/tara" />

                <TextView
                    android:id="@+id/show_event_detail_desc"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="#F88FC6"
                    android:gravity="center"
                    android:paddingBottom="15dp"
                    android:paddingTop="15dp"
                    android:text="美丽的分割条"
                    android:textColor="#333333"
                    android:textSize="14sp" />

                <com.ejoy.tool.floattab.View.HorizontalListView
                    android:id="@+id/user"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:background="@android:color/white"
                    android:cacheColorHint="@android:color/transparent"
                    android:divider="@android:color/transparent"
                    android:focusable="true"
                    android:listSelector="@android:color/transparent"
                    android:scrollbars="none"
                    app:dividerWidth="0dp" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:background="@color/material_orange_100"
                    android:gravity="center"
                    android:text="我是占位"/>


            </LinearLayout>
            <com.ejoy.tool.floattab.View.FragmentViewPager
                android:id="@+id/home_viewpager"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


        </LinearLayout>
    </com.ejoy.tool.floattab.View.SuspendScrollView>
    <!-- 指示器-->
    <com.ejoy.tool.floattab.View.HorizontalListView
        android:id="@+id/Sup"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@android:color/white"
        android:cacheColorHint="@android:color/transparent"
        android:divider="@android:color/transparent"
        android:focusable="true"
        android:listSelector="@android:color/transparent"
        android:scrollbars="none"
        android:visibility="gone"
        app:dividerWidth="0dp" />
</RelativeLayout>