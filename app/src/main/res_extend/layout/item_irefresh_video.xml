<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cp_grid_item_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/LGray3"
    android:orientation="vertical">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleType="fitXY"
            android:src="@mipmap/banner_2_e"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@color/black_55_88"
            android:scaleType="fitXY"/>
        <ImageView
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:layout_gravity="center"
            android:src="@mipmap/smart_ico_play"/>
    </FrameLayout>
    <TextView
        android:id="@+id/tvVideoTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp_10"
        android:background="@color/white"
        android:textColor="@color/black"
        android:paddingVertical="@dimen/dp_10"
        android:textSize="15sp"
        android:text="好尴尬,按下音箱而已…"/>
    <include layout="@layout/layout_line_horizontal_1dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingVertical="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_8"
        android:orientation="horizontal">
        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/Gray2"
            android:gravity="center"
            android:textSize="12sp"
            android:text="点赞：1.9w"/>
        <include layout="@layout/layout_line_vertical_1dp"/>
        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/Gray2"
            android:gravity="center"
            android:textSize="12sp"
            android:text="踩：1500"/>
        <include layout="@layout/layout_line_vertical_1dp"/>
        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/Gray2"
            android:gravity="center"
            android:textSize="12sp"
            android:text="评论"/>
        <include layout="@layout/layout_line_vertical_1dp"/>
        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/Gray2"
            android:gravity="center"
            android:textSize="12sp"
            android:text="分享"/>
    </LinearLayout>
</LinearLayout>